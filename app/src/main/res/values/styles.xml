<resources>
    <!-- Tema Fullscreen -->
    <style name="Theme.Fullscreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Remove a barra de status (superior) -->
        <item name="android:windowFullscreen">false</item> <!-- Desative o Fullscreen -->
        <!-- Deixar a barra de navegação translúcida -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:statusBarColor">#81b2cd</item> <!-- Cor cinza -->
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>

    </style>

    <!-- Customização do TextInputLayout -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#288699</item> <!-- Cor da borda quando focado -->
        <item name="boxStrokeWidth">2dp</item>         <!-- Espessura da borda padrão -->
        <item name="boxStrokeWidthFocused">2dp</item> <!-- Espessura da borda focada -->
        <item name="android:textColorHint">@color/black</item> <!-- Cor do hint -->
        <item name="hintTextColor">@color/black</item> <!-- Cor do hint flutuante -->
        <item name="boxBackgroundColor">@android:color/transparent</item> <!-- Cor de fundo -->
    </style>



</resources>
